<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:background="@drawable/playervsplayer"
    tools:context="com.flipthenumber.beta.ui.activities.ActivityPlayerVsPlayerView">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:text="Searching Player >"
                android:textSize="18sp"
                android:id="@+id/tv_search_player"
                android:textColor="@color/colorBlack"
                android:layout_height="wrap_content">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:text="30"
                android:layout_marginLeft="10dp"
                android:textSize="18sp"
                android:textColor="@color/colorBlack"
                android:layout_toRightOf="@+id/tv_search_player"
                android:id="@+id/tv_searchtime"
                android:layout_height="wrap_content">
            </TextView>


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:id="@+id/layout_tv_name"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_profile_img"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/profile" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="8dp"
                android:id="@+id/tv_name"
                android:text="You"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/three"
                android:textSize="18sp"
                android:textColor="@color/colorPrimary"
                android:layout_below="@+id/iv_profile_img"
                android:layout_height="wrap_content">

            </TextView>
        </RelativeLayout>



        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_below="@+id/layout_tv_name"
            android:visibility="gone"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/plusImg"
                android:layout_width="40dp"
                android:layout_marginRight="5dp"
                android:layout_height="wrap_content"
                android:src="@drawable/leage_two"/>

            <TextView
                android:id="@+id/ttxt"
                android:layout_toRightOf="@+id/plusImg"
                android:layout_width="wrap_content"
                android:layout_centerVertical="true"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/three"
                android:text="0"
                android:textSize="18sp"
                android:textColor="@color/colorPrimary" />


        </RelativeLayout>

    </RelativeLayout>


    <ImageView
        android:layout_width="180dp"
        android:src="@drawable/vs_img"
        android:layout_centerInParent="true"
        android:layout_height="180dp">

    </ImageView>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_profile_img_two"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/profile" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="8dp"
                android:id="@+id/tv_name_two"
                android:text="Name"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/three"
                android:textSize="18sp"
                android:textColor="@color/colorPrimary"
                android:layout_below="@+id/iv_profile_img_two"
                android:layout_height="wrap_content">

            </TextView>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_below="@+id/tv_name_two"
                android:visibility="gone"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/plusImg_two"
                    android:layout_width="40dp"
                    android:layout_marginRight="5dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/leage_two"
                    />

                <TextView
                    android:id="@+id/ttxt_two"
                    android:layout_toRightOf="@+id/plusImg_two"
                    android:layout_width="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/three"
                    android:text="0"
                    android:textSize="18sp"
                    android:textColor="@color/colorPrimary" />


            </RelativeLayout>
        </RelativeLayout>



    </RelativeLayout>


</RelativeLayout>