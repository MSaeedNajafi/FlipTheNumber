<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="match_parent">



    <RelativeLayout
        android:layout_width="wrap_content"
        android:id="@+id/layout_tournament"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/coin"
            android:layout_gravity="center"/>


        <TextView
            android:id="@+id/name_txt"
            android:layout_below="@id/img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:text="League"
            android:layout_centerHorizontal="true"
            android:textSize="20dp"
            android:textColor="@color/colorPrimary"
            android:fontFamily="@font/three" />


    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/layout_tournament"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/layout_circle_data"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content">


                <ProgressBar
                    android:id= "@+id/progressBar"
                    style= "?android:attr/progressBarStyleHorizontal"
                    android:layout_width= "200dp"
                    android:layout_height= "200dp"
                    android:layout_centerInParent= "true"
                    android:background= "@drawable/circular_shape"
                    android:indeterminate= "false"
                    android:max= "16"
                    android:progress= "16"
                    android:progressDrawable= "@drawable/circuler_progress"/>


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/tv_hour"
                        android:text="00"
                        android:textStyle="bold"
                        android:textColor="@color/colorRedDark"
                        android:textSize="22sp"
                        android:layout_height="wrap_content">

                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:text=":"
                        android:layout_toRightOf="@+id/tv_hour"
                        android:textSize="22sp"
                        android:id="@+id/tv_colon_one"
                        android:textStyle="bold"
                        android:textColor="@color/colorRedDark"
                        android:layout_height="wrap_content">

                    </TextView>



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_toRightOf="@+id/tv_colon_one"
                        android:text="00"
                        android:id="@+id/tv_minutes"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorRedDark"
                        android:layout_height="wrap_content">

                    </TextView>


                    <TextView
                        android:layout_width="wrap_content"
                        android:text=":"
                        android:layout_toRightOf="@+id/tv_minutes"
                        android:textSize="22sp"
                        android:id="@+id/tv_colon_two"
                        android:textStyle="bold"
                        android:textColor="@color/colorRedDark"
                        android:layout_height="wrap_content">

                    </TextView>


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_toRightOf="@+id/tv_colon_two"
                        android:text="00"
                        android:id="@+id/tv_seconds"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorRedDark"
                        android:layout_height="wrap_content">

                    </TextView>


                </RelativeLayout>





            </RelativeLayout>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_below="@+id/layout_circle_data"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:textStyle="bold"
                android:textSize="20sp"
                android:gravity="center"
                android:text="UNTIL ROUND BEGINS"
                android:textColor="@color/colorRedDark"
                android:layout_height="wrap_content">

            </TextView>

        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>