<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.flipthenumber.beta.ui.activities.ChallengeActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingConstraints"
    android:orientation="vertical"
    android:background="@drawable/challenge"
    >


    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
      >

        <RelativeLayout
            android:id="@+id/profile_one_layout"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_weight="1">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:background="@drawable/profile"
                android:layout_centerHorizontal="true"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/dice_challenge_profile"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/profile_two_layout"
            android:layout_width="wrap_content"
            android:layout_height="120dp"
            android:layout_weight="1">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:background="@drawable/profile"
                android:layout_centerHorizontal="true"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/dice_challenge_profile"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                />
        </RelativeLayout>


    </LinearLayout>

    <ImageView
        android:layout_width="70dp"
        android:layout_height="80dp"
        android:src="@drawable/vs"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/red_dice_img"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:src="@drawable/red_dice"
            android:layout_weight="1"
            />
        <ImageView
            android:id="@+id/yellow_dice_img"
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:src="@drawable/yellow_dice"
            android:layout_weight="1"/>
    </LinearLayout>
</LinearLayout>
    <ImageView
        android:id="@+id/logo_img"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@drawable/splash_logo"
         android:layout_marginRight="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>