<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="match_parent">

    <RelativeLayout
                android:layout_width="wrap_content"
                android:id="@+id/layout_tournament"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/img"
                            android:layout_centerHorizontal="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/coin"
                            android:layout_gravity="center"/>


                        <TextView
                            android:id="@+id/name_txt"
                            android:layout_below="@id/img"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAlignment="center"
                            android:text="League"
                            android:layout_centerHorizontal="true"
                            android:textSize="20dp"
                            android:textColor="@color/colorPrimary"
                            android:fontFamily="@font/three" />


            </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/layout_tournament"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/layout_circle_data"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content">


                <ProgressBar
                    android:id= "@+id/progressBar"
                    style= "?android:attr/progressBarStyleHorizontal"
                    android:layout_width= "200dp"
                    android:layout_height= "200dp"
                    android:layout_centerInParent= "true"
                    android:background= "@drawable/circular_shape"
                    android:indeterminate= "false"
                    android:max= "16"
                    android:progress= "10"
                    android:progressDrawable= "@drawable/circuler_progress"/>


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/tv_now_totel_player"
                        android:text="10"
                        android:textStyle="bold"
                        android:textColor="@color/colorRedDark"
                        android:textSize="30sp"
                        android:layout_height="wrap_content">

                    </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:text="/"
                        android:layout_toRightOf="@+id/tv_now_totel_player"
                        android:textSize="30sp"
                        android:id="@+id/tv_slash"
                        android:textStyle="bold"
                        android:textColor="@color/colorRedDark"
                        android:layout_height="wrap_content">

                    </TextView>



                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_toRightOf="@+id/tv_slash"
                        android:text="16"
                        android:id="@+id/tv_total"
                        android:textSize="30sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorRedDark"
                        android:layout_height="wrap_content">

                    </TextView>


                </RelativeLayout>





            </RelativeLayout>

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_below="@+id/layout_circle_data"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/layout_entry"
                android:layout_height="65dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:id="@+id/layout_token"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/store_view_item"
                    android:layout_height="65dp">

                    <ImageView
                        android:id="@+id/img_store"
                        android:visibility="visible"
                        android:layout_width="60dp"
                        android:layout_centerVertical="true"
                        android:layout_height="60dp"
                        android:src="@drawable/leage_three"/>




                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_toRightOf="@+id/img_store"
                            android:layout_height="wrap_content"
                            android:text="25 Tokens"
                            android:layout_centerVertical="true"
                            android:id="@+id/tv_entry_fee"
                            android:visibility="visible"
                            android:layout_marginLeft="15dp"
                            android:textSize="16sp"
                            android:textColor="@color/colorWhite"
                            android:fontFamily="@font/three" />












                </RelativeLayout>



                <RelativeLayout
                    android:layout_width="85dp"
                    android:padding="10dp"
                    android:visibility="visible"
                    android:id="@+id/layout_pay"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/buy_bg_button"
                    android:layout_height="65dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAlignment="center"
                        android:text="ENTER"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="@color/colorWhite"
                        android:fontFamily="@font/seven"
                        />


                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="85dp"
                    android:padding="10dp"
                    android:visibility="gone"
                    android:id="@+id/layout_play"
                    android:layout_alignParentRight="true"
                    android:background="@drawable/buy_bg_button"
                    android:layout_height="65dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textAlignment="center"
                        android:text="Play"
                        android:gravity="center"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:textColor="@color/colorWhite"
                        android:fontFamily="@font/seven"
                        />


                </RelativeLayout>


            </RelativeLayout>





        </RelativeLayout>

    </RelativeLayout>







</RelativeLayout>