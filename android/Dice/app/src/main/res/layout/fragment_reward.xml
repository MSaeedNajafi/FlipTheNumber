<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.flipthenumber.beta.ui.fragments.RewardFragment"
    android:paddingBottom="40dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/flip_layout"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">

            <ImageView
                android:layout_width="120dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/flip_the_no_new"
                android:layout_height="100dp">

            </ImageView>

        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/reward_RecyclerView"
            android:layout_below="@+id/flip_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

        <TextView
            android:id="@+id/no_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:text="No Data Found"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="25dp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:text="WATCH AN AD"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="@drawable/ad_btn_bg"
            android:padding="15dp"
            android:textColor="@color/colorWhite"
            android:textAlignment="center"
            android:textSize="15dp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints" />
    </RelativeLayout>



</androidx.constraintlayout.widget.ConstraintLayout>