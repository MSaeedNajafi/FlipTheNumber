<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.flipthenumber.beta.ui.fragments.EventFragment">

   <RelativeLayout
       android:layout_width="match_parent"
       android:padding="15dp"
       android:layout_height="match_parent">

       <LinearLayout
           android:layout_width="match_parent"
           android:orientation="vertical"
           android:gravity="center"
           android:layout_height="match_parent">

           <TextView
               android:layout_width="match_parent"
               android:text="@string/bet_coins_to"
               android:textSize="24sp"
               android:textColor="@color/colorRedDark"
               android:fontFamily="@font/three"
               android:textAlignment="center"
               android:layout_height="wrap_content">
           </TextView>

           <TextView
               android:layout_width="match_parent"
               android:text="EARN MORE COINS!"
               android:layout_marginTop="8dp"
               android:textSize="24sp"
               android:textColor="@color/colorRedDark"
               android:fontFamily="@font/seven"
               android:textAlignment="center"
               android:layout_height="wrap_content">
           </TextView>

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_marginTop="25dp"
               android:background="@drawable/bg_bet"
               android:paddingVertical="10dp"
               android:paddingHorizontal="15dp"
               android:layout_marginHorizontal="10dp"
               android:layout_height="wrap_content">

               <TextView
                   android:layout_width="wrap_content"
                   android:text="BET"
                   android:id="@+id/tv_bet"
                   android:textSize="18sp"
                   android:layout_centerVertical="true"
                   android:fontFamily="@font/three"
                   android:textColor="@color/colorWhite"
                   android:layout_height="wrap_content">
               </TextView>

               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_toRightOf="@+id/tv_bet"
                   android:layout_marginLeft="15dp"
                   android:layout_marginRight="15dp"
                   android:layout_centerVertical="true"
                   android:layout_toLeftOf="@+id/iv_coin"
                   android:layout_height="wrap_content">
                   <EditText
                       android:layout_width="match_parent"
                       android:textColor="@color/colorWhite"
                       android:hint="Enter Coins"
                       android:background="@null"
                       android:inputType="number"
                       android:id="@+id/et_coins"
                       android:textColorHint="@color/colorWhite"
                       android:layout_height="wrap_content">
                   </EditText>

                   <View
                       android:layout_width="match_parent"
                       android:layout_marginTop="2dp"
                       android:layout_below="@+id/et_coins"
                       android:background="@color/colorWhite"
                       android:layout_height="1.0dp">

                   </View>
               </RelativeLayout>


               <ImageView
                   android:layout_width="40dp"
                   android:id="@+id/iv_coin"
                   android:layout_marginRight="30dp"
                   android:layout_toLeftOf="@+id/iv_continue"
                   android:src="@drawable/leage_three"
                   android:layout_height="40dp">
               </ImageView>



               <ImageView
                   android:layout_width="40dp"
                   android:id="@+id/iv_continue"
                   android:src="@drawable/forward_contiune"
                   android:layout_alignParentRight="true"
                   android:layout_height="40dp">
               </ImageView>


           </RelativeLayout>

           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_marginTop="25dp"
               android:id="@+id/layout_without_bet"
               android:layout_marginHorizontal="10dp"
               android:background="@drawable/bg_without_bet"
               android:paddingVertical="12dp"
               android:layout_height="wrap_content">

               <TextView
                   android:layout_width="match_parent"
                   android:text="CONTINUE WITHOUT BET"
                   android:textSize="22sp"
                   android:gravity="center"
                   android:layout_centerVertical="true"
                   android:fontFamily="@font/three"
                   android:textColor="@color/colorWhite"
                   android:layout_height="wrap_content">
               </TextView>

           </RelativeLayout>

       </LinearLayout>


   </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>