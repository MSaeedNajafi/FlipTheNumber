<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">


        <ImageView
            android:id="@+id/close_img"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:visibility="visible"
            android:layout_marginRight="14dp"
            android:src="@drawable/cross_button"
            tools:layout_editor_absoluteX="326dp"
            tools:layout_editor_absoluteY="16dp" />



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_below="@+id/close_img"
            android:id="@+id/layout_top"
            tools:ignore="MissingConstraints">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bucky_neww" />



                 <TextView
                    android:id="@+id/txt"
                    android:layout_marginTop="140dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/seven"
                    android:text="BUCKY!!!"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textColor="@color/colorWhite"
                    android:textSize="30sp" />




            <TextView
                android:id="@+id/txt_"
                android:layout_below="@+id/txt"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/seven"
                android:text="YOU THREW A PERFECT GAME!"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                android:textSize="14sp" />


        </RelativeLayout>


        <ImageView
            android:id="@+id/home_img"
            android:layout_below="@+id/layout_top"
            android:layout_width="160dp"
            android:visibility="gone"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:src="@drawable/home_neww"
            tools:ignore="MissingConstraints" />


    </RelativeLayout>




</androidx.constraintlayout.widget.ConstraintLayout>