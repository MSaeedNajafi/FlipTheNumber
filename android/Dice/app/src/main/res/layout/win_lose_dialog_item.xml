<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="440dp"
            android:id="@+id/layout_top"
            tools:ignore="MissingConstraints">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/winner_new" />


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="MissingConstraints">

                <ImageView
                    android:id="@+id/win_lose_img"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/win" />

                <ImageView
                    android:id="@+id/close_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    android:layout_marginTop="60dp"
                    android:visibility="gone"
                    android:layout_marginRight="14dp"
                    android:src="@drawable/cross_button"
                    tools:layout_editor_absoluteX="326dp"
                    tools:layout_editor_absoluteY="16dp" />


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/txt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="140dp"
                        android:fontFamily="@font/seven"
                        android:text="Winner!"
                        android:textAlignment="center"
                        android:textColor="@color/colorWhite"
                        android:textSize="30sp"
                        android:textStyle="bold" />


                    <RelativeLayout
                        android:id="@+id/plus_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:visibility="gone">


                        <ImageView
                            android:id="@+id/plusImg"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginRight="15dp"
                            android:src="@drawable/leage_two"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/ttxt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:layout_marginLeft="15dp"
                            android:layout_toRightOf="@+id/plusImg"
                            android:fontFamily="@font/seven"
                            android:text="+5"
                            android:textColor="@color/colorWhite"
                            android:textSize="25sp"
                            android:visibility="gone" />


                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/plus_layout_two"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/plus_layout"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:visibility="gone">


                        <ImageView
                            android:id="@+id/plusImg_two"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/leage_three"
                            android:visibility="gone" />

                        <TextView
                            android:id="@+id/ttxt_two"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center"
                            android:layout_marginLeft="15dp"
                            android:layout_toRightOf="@+id/plusImg_two"
                            android:fontFamily="@font/seven"
                            android:text="+10"
                            android:textColor="@color/colorWhite"
                            android:textSize="25sp"
                            android:visibility="gone" />


                    </RelativeLayout>


                </RelativeLayout>

            </RelativeLayout>

        </RelativeLayout>



        <ImageView
            android:id="@+id/home_img"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_top"
            android:layout_centerHorizontal="true"
            android:src="@drawable/home_neww"
            android:visibility="gone"
            tools:ignore="MissingConstraints" />


        <RelativeLayout
            android:id="@+id/layout_double_coins"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            android:visibility="gone"
            android:layout_below="@+id/layout_top"
            android:background="@drawable/buy_bg_button"
            android:padding="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/seven"
                android:text="DOUBLE YOUR REWARDS\nWATCH AN AD!"
                android:textAlignment="center"
                android:textColor="@color/colorWhite"
                android:textSize="22sp"
                android:textStyle="bold" />


        </RelativeLayout>



    </RelativeLayout>




</androidx.constraintlayout.widget.ConstraintLayout>


